@{
    ViewBag.Title = "AjouterProduit";
}
<script src="~/js/MonScript.js"
        type="text/javascript"></script>
<h2>Mon panier</h2>
<div class="container">
    @if (ViewBag.Liste.Count > 0)
    {
        <table class="table table-hover">
            <tr class="carousel">
                <th>
                    Image
                </th>
                <th class="danger">
                    Infos
                </th>
            </tr>
            @foreach (var item in ViewBag.Liste)
            {
                <tr id="row-@item.Prod.Id">
                    <td> <img src="@item.Prod.ImageURL" style="width:250px;height:250px"> </td>
                    <td>
                        <h5>Nom : @item.Prod.Name </h5><hr />
                        <h5>Quantité : <span id="quantite_@item.Prod.Id">@item.quantite</span></h5><hr />
                        <a asp-action="PlusProduit" asp-route-id="@item.Prod.Id">
                            <img src="~/images/add.png" style="width:50px;height:50px">
                        </a>
                        <a asp-action="MoinsProduit" asp-route-id="@item.Prod.Id">
                            <img src="~/images/moin.png" style="width:50px;height:50px">
                        </a>
                        <a asp-action="SupprimerProduit" asp-route-id="@item.Prod.Id">
                            <img src="~/images/delet.png" style="width:50px;height:50px">
                        </a>
                        <div>
                            <hr />
                            <h5>
                                Prix de <span id="rquantite_@item.Prod.Id">@item.quantite</span> article(s) : <span id="total_@item.Prod.Id">@item.TotalPrice</span>
                            </h5><hr />
                        </div>
                    </td>
                </tr>
            }
        </table>
        <div>
            <strong>Prix total à payer : </strong>
            <div id="totalapayer">@ViewBag.total</div>
        </div>
        @(ViewBag.total > 0)
        {
            <p class="button">
                <a href="~/Panier/Checkout" class="btn btn-success" role="button">Checkout »</a>
            </p>
        }
    }
    else
    {
        <p>Votre panier est vide</p>
    }
</div>